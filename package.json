{
  "name": "mirs",
  "description": "",
  "version": "0.0.1",
  "author": "Richard Sternagel",
  "dependencies": {
    "gatsby": "~2.23.1",
    "gatsby-plugin-manifest": "~2.4.10",
    "gatsby-plugin-offline": "~3.2.8",
    "gatsby-plugin-sharp": "~2.6.10",
    "gatsby-plugin-styled-jsx": "~3.3.3",
    "gatsby-source-filesystem": "~2.3.10",
    "gatsby-transformer-sharp": "~2.5.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-icons": "^3.10.0",
    "react-typography": "^0.16.19",
    "styled-jsx": "^3.3.0",
    "typography": "^0.16.19"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.3.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.0.0",
    "@types/styled-jsx": "^2.2.8",
    "@types/typography": "^0.16.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "2.0.5",
    "stylelint": "^13.6.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.9.5"
  },
  "homepage": "https://github.com/rsternagel/mirs",
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "https://github.com/rsternagel/mirs"
  },
  "scripts": {
    "dev": "gatsby develop --host 127.0.0.1 --port 8000",
    "check": "tsc",
    "lint": "yarn lint-ts && yarn lint-css",
    "lint-ts": "eslint . --ignore-path .gitignore --ext .ts,.tsx,.js",
    "lint-css": "stylelint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "build": "NODE_ENV=production gatsby build",
    "serve": "gatsby serve",
    "clean": "rm -rf .cache/* && rm -rf node_modules && rm -rf yarn.lock && rm -rf public/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx": [
      "yarn lint"
    ],
    "*.ts": [
      "yarn lint"
    ]
  }
}
