{
  "name": "mirs",
  "description": "",
  "version": "0.0.1",
  "author": "Richard Sternagel",
  "dependencies": {
    "gatsby": "~3.0.3",
    "gatsby-plugin-manifest": "~3.0.0",
    "gatsby-plugin-offline": "~4.0.0",
    "gatsby-plugin-sharp": "~3.0.0",
    "gatsby-plugin-styled-jsx": "~4.0.0",
    "gatsby-source-filesystem": "~3.0.0",
    "gatsby-transformer-sharp": "~3.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.1.0",
    "react-typography": "^0.16.19",
    "styled-jsx": "^3.3.2",
    "typography": "^0.16.19"
  },
  "devDependencies": {
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.3.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-helmet": "^6.1.0",
    "@types/styled-jsx": "^2.2.8",
    "@types/typography": "^0.16.3",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1",
    "stylelint": "^13.8.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.3"
  },
  "homepage": "https://github.com/rsternagel/mirs",
  "license": "MIT",
  "main": "n/a",
  "repository": {
    "type": "git",
    "url": "https://github.com/rsternagel/mirs"
  },
  "scripts": {
    "check": "tsc",
    "clean": "rm -rf .cache/* && rm -rf node_modules && rm -rf yarn.lock && rm -rf public/*",
    "lint": "yarn lint-ts && yarn lint-css",
    "lint-ts": "eslint . --ignore-path .gitignore --ext .ts,.tsx,.js",
    "lint-css": "stylelint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "dev": "gatsby develop --host 127.0.0.1 --port 8000",
    "build": "NODE_ENV=production gatsby build",
    "serve": "gatsby serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx": [
      "yarn lint"
    ],
    "*.ts": [
      "yarn lint"
    ]
  }
}
