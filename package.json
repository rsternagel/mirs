  "scripts": {
    "dev": "gatsby develop --host 127.0.0.1 --port 8000",
    "edit": "find src/locales | entr -s 'cp -R src/locales public/'",
    "lint": "yarn lint-js && yarn lint-css",
    "lint-js": "eslint --ignore-path .gitignore . --ignore-pattern flow-typed/*",
    "lint-css": "stylelint \"src/**/*.js\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "NODE_ENV=production gatsby build",
    "serve": "gatsby serve",
    "clean": "rm -rf .cache/* && rm -rf node_modules && rm -rf yarn.lock && rm -rf public/*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint"
    ]
  }
