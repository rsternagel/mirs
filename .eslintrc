{
  "extends": [
    "eslint-config-airbnb",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": ["react", "prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "graphql": true
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "valid-jsdoc": "off",
    "require-jsdoc": "off",
    "consistent-return": ["error"],
    "arrow-body-style": [
      "error",
      "as-needed",
      { "requireReturnForObjectLiteral": true }
    ],
    "jsx-quotes": ["error", "prefer-double"],
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "react/jsx-curly-brace-presence": "off",
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [".js"]
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to"]
      }
    ]
  }
}
